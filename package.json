{
    "name": "to-hero",
    "displayName": "to-hero",
    "description": "Addon to simplfy the process of introduction to .net c#",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.67.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*:to-hero.init",
        "onCommand:to-hero.hasDotNet"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [{
            "command": "to-hero.hasDotNet",
            "title": "Check if dot net is installed"
        }],
        "viewsContainers": {
            "activitybar": [{
                "id": "to-hero-manager",
                "title": "To Hero C#",
                "icon": "resources/c_logo.svg"
            }]
        },
        "views": {
            "to-hero-manager": [{
                "id": "to-hero-manager",
                "name": "Helpers"
            }]
        },
        "viewsWelcome": [{
                "view": "to-hero-manager",
                "contents": "1. Install .net platform. [Learn more](https://aka.ms/vscode-scm)\n[Open Folder](command:vscode.openFolder)",
                "when": "'to-hero.checkHasDotNet' == 'false'"
            },
            {
                "view": "to-hero-manager",
                "contents": "Dotnet installed",
                "when": "'to-hero.checkHasDotNet'== 'true'"
            },
            {
                "view": "to-hero-manager",
                "contents": "2. Select sandbox. [Learn more](https://aka.ms/vscode-scm)\n[Open Folder](command:vscode.openFolder)"
            },
            {
                "view": "to-hero-manager",
                "contents": "3. Plugin c#. [Learn more](https://aka.ms/vscode-scm)\n[Open Folder](command:vscode.openFolder)"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.1",
        "@types/node": "14.x",
        "@types/vscode": "^1.67.0",
        "@typescript-eslint/eslint-plugin": "^5.21.0",
        "@typescript-eslint/parser": "^5.21.0",
        "@vscode/test-electron": "^2.1.3",
        "eslint": "^8.14.0",
        "glob": "^8.0.1",
        "mocha": "^9.2.2",
        "typescript": "^4.6.4"
    }
}